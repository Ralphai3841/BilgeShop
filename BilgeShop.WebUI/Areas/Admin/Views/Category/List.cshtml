@model List<CategoryViewModel>

<div>
    <div class="float-start">  <h2>Kategoriler</h2>  </div>
    <div class="float-end"> <a asp-area="Admin" asp-controller="Category" asp-action="New" class="btn btn-success"> Yeni Kategori </a> </div>

</div>


<div style="padding-top:75px">


    <table class="table table-striped">

        <tr>
            <th>Kategori Adı</th>
            <th>Açıklaması</th>
            <th></th>
        </tr>

        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-primary">Düzenle</a>
                    <a asp-area="Admin" asp-controller="Category"asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }

    </table>


</div>